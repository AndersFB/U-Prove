<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <servlet>
        <servlet-name>IssuerServlet</servlet-name>
        <servlet-class>uprove.issuer.IssuerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IssuerServlet</servlet-name>
        <url-pattern>/IssuerServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProverServlet</servlet-name>
        <servlet-class>uprove.prover.ProverServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProverServlet</servlet-name>
        <url-pattern>/ProverServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>WalletsServlet</servlet-name>
        <servlet-class>uprove.wallets.WalletsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WalletsServlet</servlet-name>
        <url-pattern>/WalletsServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VerifierServlet</servlet-name>
        <servlet-class>uprove.verifier.VerifierServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerifierServlet</servlet-name>
        <url-pattern>/VerifierServlet</url-pattern>
    </servlet-mapping>

</web-app>
